<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="fill_parent"
    android:layout_margin="5dp">

  <RadioGroup
      android:id="@+id/register_detail_role_group"
      android:layout_width="match_parent"
      android:layout_height="wrap_content">
    <RadioButton
        android:id="@+id/register_detail_role_agent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/role_agent"
        android:textSize="16sp" />

    <RadioButton
        android:id="@+id/register_detail_role_client"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/role_client"
        android:textSize="16sp" />
  </RadioGroup>

  <EditText
      android:id="@+id/register_detail_expr"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:hint="Experience"
      android:inputType="textAutoComplete"
      android:imeOptions="flagNavigateNext"
      android:layout_below="@+id/register_detail_role_group"/>

  <EditText
      android:id="@+id/register_detail_summary"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:hint="Summary"
      android:inputType="textAutoComplete"
      android:imeOptions="actionDone"
      android:layout_below="@+id/register_detail_expr"/>

  <Button
      android:id="@+id/register_detail_btnSkip"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="@string/btn_skip"
      android:layout_alignParentBottom="true"/>

  <Button
      android:id="@+id/register_detail_btnSubmit"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="@string/btn_submit"
      android:layout_alignParentBottom="true"
      android:layout_alignParentRight="true"/>

</RelativeLayout>