<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:padding="5dp">

  <TextView
    android:id="@+id/dist_list_details_title"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:textSize="20sp"
    android:text="Title"
    android:gravity="center_horizontal"
    android:textStyle="bold"/>

  <ListView
    android:id="@+id/dist_list_details_list_view"
    android:layout_width="match_parent"
    android:layout_height="fill_parent"
    android:layout_marginTop="5dp"
    android:layout_marginBottom="5dp"
    android:entries="@array/array_requirement_type"
    android:layout_below="@+id/dist_list_details_title"
    android:layout_above="@+id/dist_list_details_btn_delete">
  </ListView>

  <Button
    android:id="@+id/dist_list_details_btn_delete"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignParentBottom="true"
    android:layout_centerHorizontal="true"
    android:text="@string/btn_delete_dist_list"/>

</RelativeLayout>